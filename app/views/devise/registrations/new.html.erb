<section class="form-auth text-center" >
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h1 class="h3 mb-3 font-weight-normal">Registrate</h1>
    <%= render "devise/shared/error_messages", resource: resource %>

      

      <div class="field">
        <% if resource.avatar.attached? %>
          <%= image_tag(resource.avatar) %>
        <% else %>
          <%= image_tag ("default_profileB.jpg")%>
        <% end %>
      </div>

      <div class= "field">
        <%= f.file_field :avatar %>
      </div>

      <%= f.hidden_field(:role, :value => ["regular"]) %>

      <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "Tu Nombre" %>

      <%= f.text_field :last_name, class: "form-control", placeholder: "Tu Apellido" %>


      <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Tu Correo" %>

      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Ingresa tu ContraseÃ±a", class: "form-control" %>

      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirma tu ContraseÃ±a", class: "form-control" %>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Registrate</button>
    
  <% end %>
    
  <%= render "devise/shared/links" %>
</section>

    
