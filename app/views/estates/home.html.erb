  
  
<div class="hero-image text-center">
  <!-- Navbar de usuario -->
  <% if user_signed_in? %>
      <%= link_to  "Mis propiedades", estate_dashboard_path, class: "mt-3 mx-5 text-white font-weight-bold" %>
      <%= link_to  "Mis Propiedades Favoritas", estate_favorite_path, class: "mt-3 mx-5 text-white font-weight-bold" %>
      <%= link_to  "Cerrar Sesion", destroy_user_session_path, method: :delete, class: "mt-3 mx-3 text-white font-weight-bold" %>
      <%= link_to  "Edita tu perfil", edit_user_registration_path, class: "mt-3 mx-5 text-white font-weight-bold" %>
      <%= link_to 'Publica una propiedad', new_estate_path, class: "mt-3 mx-5 text-white font-weight-bold" %>
      <span class="ml-5 text-white"><%= current_user.email %></span>
      <%= image_tag(current_user.avatar_thumbnail, size: '70x70', class: "rounded-circle mx-5") %>
  <% else %>
      <%= link_to  "Inicia Sesion", new_user_session_path, class: "mt-3 ml-3 text-white font-weight-bold" %>
      <%= link_to  "Registrate", new_user_registration_path, class: "mt-3 ml-3 text-white font-weight-bold" %>
  <% end %>


  <!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="hero-text">
    <h1 class="font-weight-bold">CommercialCity</h1>
    <h3 class="mb-3">La comunidad digital del mundo inmobiliario</h3>

    <%= render 'search_form' %>
  </div>
</div>

<div class="container">
  
  <!-- Contador de tipos de propiedad con sus logos-->
  <div class=" col my-5 font-weight-bold">
    <div class="row">
      <% @categories.each do |cat| %>
        <% if cat.name == "Casa" %>
          <i class="fas fa-home fa-5x mx-auto mt-2" aria-hidden="true"></i> 
        <% elsif cat.name == "Departamento" %>
          <i class="fas fa-building fa-5x mx-auto mt-2" aria-hidden="true"></i> 
        <% elsif cat.name == "Terreno" %>
          <i class="far fa-square fa-5x mx-auto mt-2" aria-hidden="true"></i> 
        <% elsif cat.name == "Industria" %>
          <i class="fas fa-industry fa-5x mx-auto mt-2" aria-hidden="true"></i>
        <% elsif cat.name == "Local Comercial" %>
          <i class="fas fa-store fa-5x mx-auto mt-2" aria-hidden="true"></i>
        <% elsif cat.name == "Parcela de Agrado" %>
          <i class="fas fa-tree fa-5x mx-auto mt-2" aria-hidden="true"></i> 
        <% else %>
          <i class="fas fa-tractor fa-5x mx-auto mt-2" aria-hidden="true"></i> 
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="row mb-2 mx-5 h2">
    <% @categories.each do |cat| %>
      <%= cat.estates.count %>
    <% end %>
  </div>

  <!-- Muestra al azar de 6 propiedades publicadas. Cambian al hacer refresh a la pagina -->    
  <h2>Algunas propiedad publicadas</h2>
  <div class="row row-cols-1 row-cols-md-3">
    <% @estates_random.each do |estate| %>
        <div class="col-md-4">
          <div class="card h-100">
            <%= image_tag estate.photos[0], class: 'card-img-top', width: 300 if estate.photos.attached?%>
            <div class="card-body">
              <h2 class="card-title"> <%= estate.address %></h2>
              <p class="card-text">Size: <%= estate.rooms %><br>$<%= estate.price %></p><%= estate.rooms %>
            </div>
          </div>
        </div>
    <% end %>
  </div>

