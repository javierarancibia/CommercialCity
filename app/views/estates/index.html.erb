<p id="notice"><%= notice %></p>

<%= search_form_for @q do |f| %>
  <%= f.label :Venta_o_arriendo %>
  <%= f.collection_select :type_id_eq, Type.all, :id, :mode, include_blank: true %>

  <%= f.label :Ciudad %>
  <%= f.collection_select :location_id_eq, Location.all, :id, :name, include_blank: true %>

  <%= f.label :Tipo_de_propiedad %>
  <%= f.collection_select :category_id_eq, Category.all, :id, :name, include_blank: true %>

  <%= f.submit "search" %>
<% end %>

<h1>Propiedades</h1>

<table class="table table-striped"> 
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Categoria</th>
      <th>Ubicacion</th>
      <th>Ciudad</th>
      <th>Precio</th>
      <th>Dormitorio</th>
      <th>Ba√±os</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estates.each do |estate| %>
      <tr>
        <td><%= estate.type.mode %></td>
        <td><%= estate.category.name %></td>
        <td><%= estate.address %></td>
        <td><%= estate.location.name %></td>
        <td><%= estate.price %></td>
        <td><%= estate.rooms %></td>
        <td><%= estate.bathrooms %></td>
        <td><%= image_tag estate.photos[0].variant(resize: '120x80') %></td>

  
        <td><%= link_to 'Show', estate %></td>
        <td><%= link_to 'Edit', edit_estate_path(estate) %></td>
        <td><%= link_to 'Destroy', estate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Estate', new_estate_path, class: "btn btn-primary" %>


