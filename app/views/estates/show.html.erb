<div class="container pt-3 show-header">
  <section class="py-5">
    <span class="display-4"><%= @estate.address %></span>, <span class="display-4"><%= @estate.location.name %></span>
    <p class="display-4"><%= @estate.location.region %></p><p class="h5">Fecha de Publicacion: <%= @estate.created_at.strftime("%Y-%m-%d") %></p>
  </section>
</div>
        <div class="container text-center mb-3">
          <div class="row bg-light">
            <div class="col-3">
              <p class="m-0 h5"><strong>Habitaciones</strong></p>
                  <span class="lead h4"><%= @estate.rooms %></span>
            </div>
            <div class="col-3">
              <p class="m-0 h4"><strong>Ba√±os</strong></p>
                  <span class="lead"><%= @estate.bathrooms %></span>
