<div class="container mt-5 pt-5 show-header">
  <section class="py-5">
    <h1 class="display-4"><%= @estate.address %></h1>
    <p class="lead">The background images for the slider are set directly in the HTML using inline CSS. The images in this snippet are from <a href="https://unsplash.com">Unsplash</a>, taken by <a href="https://unsplash.com/@joannakosinska">Joanna Kosinska</a>!</p>
  </section>
</div>

<div id="carouselExampleControls" class="carousel slide container" data-ride="carousel" align="center">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= @estate.photos.first.nil? ? image_tag("house.jpg") : image_tag(@estate.photos.first) %>
    </div>
    <div class="carousel-item">
      <%= @estate.photos.second.nil? ? image_tag("house.jpg") : image_tag(@estate.photos.second) %>
    </div>
    <div class="carousel-item">
      <%= @estate.photos.third.nil? ? image_tag("house.jpg") : image_tag(@estate.photos.third) %>
    </div>
    <div class="carousel-item">
      <%= @estate.photos.fourth.nil? ? image_tag("house.jpg") : image_tag(@estate.photos.fourth) %>
    </div>
    <div class="carousel-item">
      <%= @estate.photos.fifth.nil? ? image_tag("house.jpg") : image_tag(@estate.photos.fifth) %>
    </div>
        <div class="carousel-item">
      <%= @estate.photos[5].nil? ? image_tag("house.jpg") : image_tag(@estate.photos[5]) %>
    </div>

  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

  <div class="container show-text">
    <div class="row">
      <div class="col-8">

        <p>
          <strong>Name:</strong>
          <%= @estate.name %>
        </p>

        <p>
          <strong>Address:</strong>
          <%= @estate.address %>
        </p>

        <p>
          <strong>Price:</strong>
          <%= @estate.price %>
        </p>

        <p>
          <strong>Rooms:</strong>
          <%= @estate.rooms %>
        </p>

        <p>
          <strong>Bathrooms:</strong>
          <%= @estate.bathrooms %>
        </p>

      </div>

          <div class="col-4">
            <%= render "estates/agent_details" %>
          </div>

        <%= link_to 'Edit', edit_estate_path(@estate) %> |
        <%= link_to 'Back', estates_path %>
    </div>
  </div>

<div class="container mt-5">
  <%#= image_tag @estate.photos.first.variant(resize: '900x1500') if @estate.photos.attached? %>
</div>






